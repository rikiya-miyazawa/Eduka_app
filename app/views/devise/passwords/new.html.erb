<div class="devise-container">
  <div class="forgot-title">
    <h2><%= t('.forgot_your_password') %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: 'email', id: 'forgot-form'%>
  </div>

  <div class="forgot-actions">
    <%= f.submit t('.send_me_reset_password_instructions') ,id: 'forgot-submit'%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>