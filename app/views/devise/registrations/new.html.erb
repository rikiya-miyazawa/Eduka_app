<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.fields_for :profile, @user.build_profile do |profile| %>
    <div class="profile_name">
      <%= profile.label :name %>
      <br>
      <%= profile.text_field :name %>
    </div>
  <% end %>
  <%= f.fields_for :affiliations, @user.affiliations.build do |affiliation| %>
    <div class="division_name">
      <%= affiliation.label t('view.affiliations.affiliation') %>
      <br>
      <%= affiliation.select :division_id,  Division.all.collect { |division| [ division.name, division.id ] }%>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
