<h2><%= t('view.subjects.new_subject') %></h2>

<%= form_with(model: @subject, local: true) do |form| %>

  <% if @subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= @subject.errors.count %>
      <%= t('errors.messages.count') %></h2>
      <ul>

      <% @subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="user_name">
    <%= t('view.users.name') %>
    <br>
    <%= User.find(params[:user_id]).profile.name %>
    <%= form.hidden_field :user_id, :value => params[:user_id] %>
  </div>
  <br>
  <div class="education_name">
    <%= t('view.educations.education') %>
    <br>
    <%= Education.find(params[:education_id]).name %>
    <%= form.hidden_field :education_id, :value => params[:education_id] %>
  </div>
  <br>
  <div class="subject_name">
    <%= form.label :name %>
    <br>
    <%= form.text_field :name %>
  </div>
  <div class="subject_status">
    <%= form.label :status %>
    <%= form.select :status, Subject.statuses.keys %>
  </div>
  <div class="subject_deadline">
    <%= form.label :deadline %>
    <%= form.date_select :deadline, include_blank: "" %>
  </div>

  <%= form.submit t('helpers.submit.create') %>
<% end %>
  <%= link_to t('helpers.back'), :back %>