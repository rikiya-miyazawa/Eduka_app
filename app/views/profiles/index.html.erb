<h2><%= t('view.profiles.index') %></h2>
<br>
<h1><%= t('view.searches.search') %></h1>
<%= search_form_for @q, url: search_profiles_path do |f| %>
  <%= f.label :name_cont, t('view.users.name') %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit t('view.searches.search') %>
<% end %>

<table>
  <tr>
    <th><%= t('view.profiles.name') %></th>
    <th><%= t('view.affiliations.affiliation') %></th>
    <th><%= t('view.profiles.hire_date') %></th>
    <th><%= t('view.profiles.job') %></th>
  </tr>

  <% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <% profile.user.affiliation_divisions.each do |division| %>
      <td><%= division.name%></td>
    <% end %> 
    <td><%= profile.hire_date %></td>
    <td><%= profile.job %></td>
    <td><%= link_to t('view.teachings.teaching'), list_education_path(profile.user.id) %></td>

  </tr>
<% end %> 
</table>